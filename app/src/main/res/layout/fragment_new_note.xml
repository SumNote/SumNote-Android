<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_200"
    android:orientation="vertical"
    tools:context=".ui.NewNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:background="@drawable/img_note_background"
        android:orientation="vertical"
        android:id="@+id/note">

        <TextView
            android:fontFamily="@font/yeongdeoksea"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:text="노트의 제목"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/yeongdeoksea"
            android:id="@+id/text_summary_note"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:text="생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트\n생성된 요약 노트"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="저장하기"
        android:textStyle="bold"/>


</LinearLayout>