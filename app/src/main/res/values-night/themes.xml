<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SumNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 앱의 주요 브랜드 색상을 의미, 체크박스,라디오 박스 등이 선택되었을때 이 색으로 변경됨 -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">#4EC853</item>
        <!--        colorPrimary에 쓰이는 텍스트나 아이콘의 색상, Primary와 대조되는 색상이 좋음-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">#4EC853</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--        상단바 안보이게-->
        <item name="windowNoTitle">true</item>
    </style>
</resources>